<div class="row">
	<div class="col-md-8">
		<div class="media">
			<br />
			<% if @user.avatar? %>
				<%= image_tag @user.avatar.url, class: 'pull-left' %>
			<% end %>
			<div class="media-body">
				<h2 class="media-heading"><%= @user.name %></h2>
				<small>
					<%= pluralize(@user.posts.count, 'post') %>,
					<%= pluralize(@user.comments.count, 'comment') %>
				</small>
			</div>
		</div>
	</div>
</div>

<br />
<div class="row">
	<div class="col-md-8">
		<ul class="nav nav-pills">
			<li class="active"><a href="#posts" data-toggle="tab">Posts <span class="badge"><%= @user.posts.count %></span></a></li>
			<li><a href="#comments" data-toggle="tab">Comments <span class="badge"><%=@user.comments.count %></a></li>
		</ul>
		<div class="tab-content">
			<div class="tab-pane active" id="posts">
				<br />
				<div class="well">
					<%= render @posts %>
				</div>
			</div>
			<div class="tab-pane" id="comments">
				<br />
				<div class="well">
					<%= render @user.comments %>
				</div>
			</div>
		</div>
	</div>
</div>
